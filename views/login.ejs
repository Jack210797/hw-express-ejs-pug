<!doctype html>
<html lang="uk">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    Login
  </title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link href="/favicon.png" rel="icon" type="image/png">
</head>

<body class="bg-light">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <h2 class="text-center mb-4">Вхід</h2>
            <% if (locals.message) { %>
              <div class="alert alert-<%= message.includes('успішно') ? 'success' : 'danger' %>">
                <%= message %>
              </div>
              <% } %>
                <form action="/login" method="post">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                  </div>
                  <button type="submit" class="btn btn-primary btn-block">Увійти</button>
                </form>
                <div class="mt-3 text-center">
                  <a href="/registration" class="text-decoration-none">Регістрація</a>
                </div>
                <div class="mt-3 text-center">
                  <a href="/" class="text-decoration-none">На головну</a>
                </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>